<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sande.r_bot.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Sandy!"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtbx"
        android:hint="Enter your name..."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Proceed"
        android:onClick="proclick"
        android:id="@+id/btn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Talk to me"
        android:onClick="proclick"
        android:id="@+id/stt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Attack"
        android:onClick="attackclick"
        android:id="@+id/attack"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ChatBot"
        android:onClick="chatbotclick"
        android:id="@+id/chatbot"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/in"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/out"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:id="@+id/run"
        android:contentDescription="Speak up"/>

    <ListView
        android:id="@+id/outlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
